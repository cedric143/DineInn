<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
    android:layout_height="700dp"
    android:background="@drawable/pizzabackground2"
    android:scaleType="fitXY"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/img_pepperoni"
        android:layout_width="233dp"
        android:layout_height="225dp"
        android:layout_marginLeft="80sp"
        android:scaleType="centerCrop"
        android:src="@drawable/pepperoni" />

    <TextView
        android:id="@+id/txt_pepperoni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110sp"
        android:layout_marginTop="8dp"
        android:text="pepperoni pizza"
        android:textStyle="italic"
        android:textColor="#000"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/img_hawaiian"
        android:layout_width="233dp"
        android:layout_height="225dp"
        android:layout_marginLeft="80sp"
        android:scaleType="centerCrop"
        android:src="@drawable/hawaiianpizza" />

    <TextView
        android:id="@+id/txt_hawaiian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110sp"
        android:layout_marginTop="8dp"
        android:text="Hawaiian pizza"
        android:textStyle="italic"
        android:textColor="#000"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/img_chicken"
        android:layout_width="233dp"
        android:layout_height="225dp"
        android:layout_marginLeft="80sp"
        android:scaleType="centerCrop"
        android:src="@drawable/chickenpizza" />

    <TextView
        android:id="@+id/txt_chicken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110sp"
        android:layout_marginTop="8dp"
        android:text="chicken pizza"
        android:textStyle="italic"
        android:textColor="#000"
        android:textSize="25sp" />

        <ImageView
            android:id="@+id/img_mushroom"
            android:layout_width="233dp"
            android:layout_height="225dp"
            android:layout_marginLeft="80sp"
            android:scaleType="centerCrop"
            android:src="@drawable/mushroompizza" />

        <TextView
            android:id="@+id/txt_mushroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110sp"
            android:layout_marginTop="8dp"
            android:text="mushroom pizza"
            android:textStyle="italic"
            android:textColor="#000"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/img_periperi"
            android:layout_width="233dp"
            android:layout_height="225dp"
            android:layout_marginLeft="80sp"
            android:scaleType="centerCrop"
            android:src="@drawable/periperi" />

        <TextView
            android:id="@+id/txt_periperi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110sp"
            android:layout_marginTop="8dp"
            android:text="peri peri pizza"
            android:textStyle="italic"
            android:textColor="#000"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_ordernow"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95sp"
            android:layout_marginTop="40sp"
            android:text="Order Now"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:backgroundTint="#5C3131"
            android:textStyle="italic"



            />

    </LinearLayout>
</ScrollView>